<div class="container-fluid">
    <div class="row">
            <div class="col-lg-6 col-12 mt-3">
                <div class="fluid-container" id="video-card">
                    
                        <div class="container-fluid" id="video">
                          <script>
                            function onPlayerReady(event) {
                                event.target.cueVideoById('XqZsoesa55w');
                              }
                          </script>
                        </div>    
                
                <div class="fluid-container">
                    <div class="row first-row mt-2">
                        <div class="container">
                          <div class="row">
                            <div class="col-6">
                              <button type="button" id="playAndPause">    
                                  <i class="fa fa-play"></i>
                              </button>
                              <button type="button" id="muteAndUnmute">
                                  <i class="fa fa-volume-up"></i>
                              </button>
                              <button class="btn btn-outline-secondary" id="syncVideo" type="button">Sync</button>
                            </div>

                            <div class="col-6">
                              <div class="input-group">
                                <input type="text" class="form-control" id="video_id" placeholder="YouTube Video ID" aria-label="YouTube Video ID" aria-describedby="basic-addon2">
                                <div class="input-group-append">
                                  <button class="btn btn-outline-secondary" id="playAnotherVideo" type="button"><i class="fa fa-play"></i></button>
                                </div>
                              </div>
                            </div>
                          </div>     
                        </div>    
                    </div>
                </div>
                
                
                </div>
                
                
 
                
            </div>
            


            <div class="col-lg-4 col-sm-8 col-12 mt-3">
                <div class="card h-100" id="chat-card">
                    <div class="card-header">
                        Chat
                    </div>
                    
                    <div class="chat-message">
                        <ul class="chat" id="chat-ul">                   </ul>    
                    </div>
                      <div class="card-footer">

                                        <div class="fluid-container mt-3">
                    <div class="row">
                        <div class="col-9">
                            <div class="form-group mb-0">
                                <textarea class="form-control" id="myMessage" rows="2" placeholder="Type your message here..."></textarea>
                            </div>
                        </div>
                        <div class="col-3 d-flex">
                            <div class="container justify-content-center align-self-center">
                                <button type="button" id="sendMessage" class="btn btn-primary" onclick="onClickSendMessageButton()">Send</button>
                            </div>
                        </div>    
                    </div>    
                </div>  


                      </div>
                </div>
                
  
                
            </div>
            
