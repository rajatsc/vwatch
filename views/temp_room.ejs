                        <div class="fluid-container mx-0">
                          <div class="row">
                            <div class="col-md-8 px-0">
                              Members
                              <span class="badge badge-success" id="online_users">
                                1 Online
                              </span>
                             </div>
                          </div>
                        </div>      
                        
                    </div>
                
                    
                    <ul class="list-group list-group-flush friend-list" id="members-ul">
                    


              
            </ul>
                    
                </div>
