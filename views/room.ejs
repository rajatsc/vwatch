                        <% } %>
                        </div>
                        <span class="ml-auto text-muted float-right" id=<%= members_array[i].userName + "-status"%>>
                        <i class="fa fa-circle"></i>
                        </span>
                        </a>
                    
                      <% } %>

              
            </ul>
                    
                </div>
            </div>
